generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Conversation {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  messages  Message[]
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  sender         Sender
  text           String
  createdAt      DateTime     @default(now())

  conversation   Conversation @relation(fields: [conversationId], references: [id])
}
enum Sender {
  user
  ai
}